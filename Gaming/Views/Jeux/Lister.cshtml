@model IEnumerable<Gaming.Jeu>

@{
    ViewBag.Title = "Lister";
}

<h2>Lister</h2>

<p>
    <a href='@Url.Action("Ajouter", "Personnes")' style="text-decoration:none">
        <img src='@Url.Content("~/Images/UI/Add.png")'
             alt="Ajouter" class="CMD_Icon_3"
             data-toggle="tooltip"
             title="Ajouter un film" />
    </a>
</p>

<table class="table">
    <tr>
        <th>
            <a href='@Url.Action("Sort", "Jeux",new {sortBy = "Nom"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Nom" />
            </a>
        </th>
        <th>
            <a href='@Url.Action("Sort", "Jeux",new {sortBy = "Type"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Type" />
            </a>
        </th>
        <th>
            <a href='@Url.Action("Sort", "Jeux",new {sortBy = "Description"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Description" />
            </a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img id="new_image" src="@Url.Content("~" + item.GetImageURL())" width="100" height="100" />
        </td>
        <td>
            @Html.ActionLink("Editer", "Editer", new { id=item.Id }) |
            @Html.ActionLink("Détails", "Details", new { id=item.Id }) |
            @Html.ActionLink("Effacer", "Effacer", new { id = item.Id })
        </td>
    </tr>
}

</table>
