@model IEnumerable<Gaming.Jeu>

@{
    ViewBag.Title = "Lister";
}

<h2>Lister</h2>

<p>
    @Html.ActionLink("Ajouter un jeu", "Ajouter")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteWeb)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img id="new_image" src="@Url.Content("~" + item.GetImageURL())" width="100" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteWeb)
        </td>
        <td>
            @Html.ActionLink("Editer", "Editer", new { id=item.Id }) |
            @Html.ActionLink("Détails", "Details", new { id=item.Id }) |
            @Html.ActionLink("Effacer", "Effacer", new { id = item.Id })
        </td>
    </tr>
}

</table>
