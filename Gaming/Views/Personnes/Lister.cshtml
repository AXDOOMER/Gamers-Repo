@model IEnumerable<Gaming.Personne>

@{
    ViewBag.Title = "Lister";
}

<h2>Lister</h2>

<p>
    @Html.ActionLink("Ajouter un joueur", "Ajouter")
</p>
<table class="table">
    <tr>
        <th>
            <a href='@Url.Action("Sort", "Personnes",new {sortBy = "Prenom"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Prenom" />
            </a>
        </th>
        <th>
            <a href='@Url.Action("Sort", "Personnes",new {sortBy = "Nom"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Nom" />
            </a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            <a href='@Url.Action("Sort", "Personnes",new {sortBy = "DateNaissance"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Ajouter" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Date de Naissance" />
            </a>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            <img id="new_image" src="@Url.Content("~" + item.GetImageURL())" width="100" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateNaissance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Editer", new { id=item.Id }) |
            @Html.ActionLink("Détails", "Details", new { id=item.Id }) |
            @Html.ActionLink("Effacer", "Effacer", new { id = item.Id })
        </td>
    </tr>
}

</table>
